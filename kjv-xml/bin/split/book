#!/bin/bash

declare -A book

book["gn"]="Genesis"
book["ex"]="Exodus"
book["lv"]="Leviticus"
book["nm"]="Numbers"
book["dt"]="Deuteronomy"
book["js"]="Joshua"
book["jud"]="Judges"
book["rt"]="Ruth"
book["1sm"]="1 Samuel"
book["2sm"]="2 Samuel"
book["1kgs"]="1 Kings"
book["2kgs"]="2 Kings"
book["1ch"]="1 Chronicles"
book["2ch"]="2 Chronicles"
book["ezr"]="Ezra"
book["ne"]="Nehemiah"
book["et"]="Esther"
book["job"]="Job"
book["ps"]="Psalms"
book["prv"]="Proverbs"
book["ec"]="Ecclesiastes"
book["so"]="Song of Solomon"
book["is"]="Isaiah"
book["jr"]="Jeremiah"
book["lm"]="Lamentations"
book["ez"]="Ezekiel"
book["dn"]="Daniel"
book["ho"]="Hosea"
book["jl"]="Joel"
book["am"]="Amos"
book["ob"]="Obadiah"
book["jn"]="Jonah"
book["mi"]="Micah"
book["na"]="Nahum"
book["hk"]="Habakkuk"
book["zp"]="Zephaniah"
book["hg"]="Haggai"
book["zc"]="Zechariah"
book["ml"]="Malachi"
book["mt"]="Matthew"
book["mk"]="Mark"
book["lk"]="Luke"
book["jo"]="John"
book["act"]="Acts"
book["rm"]="Romans"
book["1co"]="1 Corinthians"
book["2co"]="2 Corinthians"
book["gl"]="Galatians"
book["eph"]="Ephesians"
book["ph"]="Philippians"
book["cl"]="Colossians"
book["1ts"]="1 Thessalonians"
book["2ts"]="2 Thessalonians"
book["1tm"]="1 Timothy"
book["2tm"]="2 Timothy"
book["tt"]="Titus"
book["phm"]="Philemon"
book["hb"]="Hebrews"
book["jm"]="James"
book["1pe"]="1 Peter"
book["2pe"]="2 Peter"
book["1jo"]="1 John"
book["2jo"]="2 John"
book["3jo"]="3 John"
book["jd"]="Jude"
book["re"]="Revelation"

rm -rf out
mkdir -p out
for key in ${!book[@]}; do
	echo -n "."
	output=$(xpath -q -e "//bible/b[@id='${key}']" en_kjv1.xml)
	cat > out/${key}.xml <<EOF
<?xml version="1.0" encoding="UTF-8"?>
${output}
EOF
done